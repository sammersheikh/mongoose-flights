<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flights</title>
</head>
<body>
    <h1>List of <%= title %></h1>
    <%= console.log(flights) %>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight<br>Number</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>  
    <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
        </tr>
    <% }) %>
        </tbody>
    </table>
    <a href="flights/new">Add a Flight</a>
</body>
</html>
